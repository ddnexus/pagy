{
    "include": ["./cypress/**/*.ts"],
    "compilerOptions": {
        "strict": true,
        "target": "es2016",
        "module": "ES6",
        "lib": ["esnext", "dom", "dom.iterable"],
        "types": ["cypress", "node"],
        "noEmit": true,
        "allowJs": true,
        "checkJs": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "ts-node": {
        // Tell ts-node CLI to install the --loader automatically
        "esm": true
    }
}
