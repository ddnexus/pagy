{
    "cSpell.words": [
        "activerecord",
        "arel",
        "autorun",
        "backport",
        "bulma",
        "Codecov",
        "ddnexus",
        "Demichelis",
        "devcontainer",
        "Domizio",
        "entrypoint",
        "Gitter",
        "haml",
        "javascripts",
        "Kaminari",
        "meilisearch",
        "minimalistic",
        "mongoid",
        "navless",
        "navs",
        "overridable",
        "pagy",
        "pluralizations",
        "rackup",
        "rebased",
        "rubygem",
        "searchkick",
        "solargraph",
        "uikit",
        "uncommenting",
        "unscope",
        "unstyled"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "markdownlint.config": {
        "blanks-around-fences": true,
        "MD024": false,
        "MD025": false,
        "MD026": false,
        "MD033": false,
        "MD046": false
    },
    "markdownlint.run": "onType",
    "ruby.format": "rubocop",
    "ruby.lint": {
        "rubocop": {
            "useBundler": true // enable rubocop via bundler
        },
        "standard": false
    },
    "ruby.useBundler": true, //run non-lint commands with bundle exec
    "ruby.useLanguageServer": true, // use the internal language server (see below)
    "solargraph.useBundler": true,
    "runTerminalCommand.commands": [
        {
            "auto": true,
            "command": "irb --simple-prompt -Ilib -rpagy",
            "name": "IRB",
            "preserve": true
        }
    ],
    // available in the container
    "terminal.integrated.profiles.linux": {
        "bash": {
            "icon": "terminal-bash",
            "path": "bash"
        }
    },
    "trailing-spaces.highlightCurrentLine": false,
    "trailing-spaces.trimOnSave": true
}
